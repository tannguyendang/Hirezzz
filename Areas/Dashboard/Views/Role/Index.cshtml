@model List<Role>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/dashboard/role/add" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <label>Name</label>
                    <input type="text" name="name" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr val="@item.Id">
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <i class="fa-sharp fa fa-trash"></i>
                </td>
                <td>
                    <a href="/dashboard/role/edit/@item.Id"><i class="fa-sharp fa fa-wrench"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('.fa-trash').click(function () {
        var id = $(this).closest('tr').attr('val');
        console.log(id);
        $.post('/dashboard/role/get', { 'id': id }, (d) => {
            console.log(d);
            $('#delModal input[name="id"]').val(d['id']);
            $(delRs).html(`Are you sure delete role: ${d['name']}?`);
            $(delModal).modal('show');
        });
    })
</script>
<div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/dashboard/role/delete" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="id" />
                <div id="delRs"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>